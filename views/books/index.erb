<h1>Hello books</h1>
<table class="table is-bordered is-striped is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th>Name</th>
      <th>Genre</th>
      <th><abbr title="Subcategory">SC</abbr></th>
      <th>Shelf</th>
      <th>Rack</th>
      <th><abbr title="Comic Book">CB</abbr></th>
      <th>Note</th>
      <th>Author</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr class="active is-selected">
        <td><%= book.name %></td>
        <td><%= book.genre %></td>
        <td><%= book.subcategory %></td>
        <td><%= book.shelf %></td>
        <td><%= book.rack %></td>
        <td><%= book.comic_book %></td>
        <td><%= book.note %></td>
        <td><%= book.authors.first.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
